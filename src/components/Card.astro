---
import { Image } from "astro:assets";

interface card {
	title: string;
	address: string;
	href: string;
	branch: string;
}
const { title, address, href, branch } = Astro.props;
---

<a href={href} target="_blank">
	<article>
		<h3>{title}</h3>
		<p>{address}</p>
		<span>
			<p>Delivery</p>
			<p>Take Away</p>
		</span>
	</article>
	<Image src={branch} alt="imagen de la sucursal" />
</a>

<style>
	h3 {
		font-size: 16px;
		font-weight: 600;
      margin-bottom: 5px;
	}
	img {
		width: 100px;
		height: 100px;
		border-radius: 20px;
      object-fit: contain;
	}
	a {
		display: flex;
      max-height: 100px;
		max-width: 326px;
      width: 100%;      
		height: 112px;
		border-radius: 20px;
		justify-content: space-between;
		box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
		padding: 12px 6px 6px 12px;
		text-decoration: none;
		color: #282b2e;
		transition: all 0.3s ease;
	}
	a:hover {
		box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.4);
	}
	p {
		font-size: 14px;
	}
	article > span {
		display: flex;
		justify-content: space-between;
      align-items: center;
		gap: 10px;
      margin-top: 16px;
	}
</style>
